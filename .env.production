# Production Environment Configuration for Traveal
# IMPORTANT: Change all default values before deploying to production!

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=traveal_secure_password_2024_CHANGE_THIS
MONGO_DB_NAME=traveal

# MongoDB Connection
MONGODB_URI=mongodb://admin:traveal_secure_password_2024_CHANGE_THIS@localhost:27017/traveal?authSource=admin

# Redis Configuration  
REDIS_PASSWORD=traveal_redis_2024_CHANGE_THIS
REDIS_URL=redis://:traveal_redis_2024_CHANGE_THIS@localhost:6379

# JWT Configuration (MUST CHANGE THESE!)
JWT_SECRET=your_super_secure_jwt_secret_change_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration (MUST CHANGE THIS!)
ENCRYPTION_KEY=your_super_secure_encryption_key_change_in_production

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Trip Detection Configuration
TRIP_MIN_DISTANCE=50
TRIP_MIN_DURATION=300
LOCATION_ACCURACY_THRESHOLD=100

# Data Anonymization
ANONYMIZATION_RADIUS=100
TIME_ROUNDING_MINUTES=60

# Push Notifications (Optional)
FCM_SERVER_KEY=your-firebase-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# SSL/TLS (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Analytics Configuration (for Python scripts)
TRAVEAL_ENCRYPTION_KEY=your_super_secure_encryption_key_change_in_production

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring and Alerts
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=admin@your-domain.com

# Geographic Constraints (for Kerala deployment)
GEOGRAPHIC_BOUNDS_NORTH=12.7
GEOGRAPHIC_BOUNDS_SOUTH=8.3
GEOGRAPHIC_BOUNDS_EAST=77.4
GEOGRAPHIC_BOUNDS_WEST=74.9

# Performance Tuning
MAX_CONCURRENT_CONNECTIONS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000

# Government Compliance
DATA_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365
ANONYMIZATION_SCHEDULE="0 3 * * *"  # Daily at 3 AM
GDPR_COMPLIANCE_MODE=true

# Development/Testing (set to false in production)
DEBUG_MODE=false
DEVELOPMENT_CORS=false
MOCK_EXTERNAL_SERVICES=false

# External Service Configuration
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key
ANALYTICS_API_KEY=your-analytics-api-key

# Container Resources
MEMORY_LIMIT=1g
CPU_LIMIT=1.0

# Network Configuration
SUBNET=172.20.0.0/16
BACKEND_IP=172.20.0.10
FRONTEND_IP=172.20.0.20
DATABASE_IP=172.20.0.30