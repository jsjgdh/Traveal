# Development Environment Configuration for Traveal

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=dev_password_123
MONGO_DB_NAME=traveal_dev

# MongoDB Connection (SQLite for development)
DATABASE_URL=file:./dev.db
MONGODB_URI=mongodb://admin:dev_password_123@localhost:27017/traveal_dev?authSource=admin

# Redis Configuration
REDIS_PASSWORD=dev_redis_123
REDIS_URL=redis://:dev_redis_123@localhost:6379

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=dev-encryption-key-not-for-production

# Security Configuration
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:5173

# Rate Limiting (more relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/dev.log

# Trip Detection Configuration
TRIP_MIN_DISTANCE=10
TRIP_MIN_DURATION=60
LOCATION_ACCURACY_THRESHOLD=200

# Data Anonymization
ANONYMIZATION_RADIUS=50
TIME_ROUNDING_MINUTES=30

# Development Features
DEBUG_MODE=true
DEVELOPMENT_CORS=true
MOCK_EXTERNAL_SERVICES=true

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api/v1
VITE_APP_NAME=Traveal Dev
VITE_APP_VERSION=1.0.0-dev
VITE_ENABLE_DEVTOOLS=true

# Testing Configuration
TEST_DATABASE_URL=file:./test.db
TEST_JWT_SECRET=test-jwt-secret
TEST_ENCRYPTION_KEY=test-encryption-key